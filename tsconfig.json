{
  "extends": "expo/tsconfig.base",
  "rootDir": "./src",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": false,
    "jsx": "react-native",
    "lib": [
      "es6",
      "es2019",
      "esNext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esNext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "src/Services/AnalyticsService/configs/Events.ts",
    "scripts/internalVersions"
  ]
}
